body {
  background: #fff;
  color: #000;
  font-family: Calibri, -apple-system, ".SFNSText-Regular", "Helvetica Neue", sans-serif;
  font-size: 12pt;
}

/* Headers */

h1 {
  color: #112481;
  font-size: 2rem;
  margin: 4pt auto 0.25em auto;
}

h2 {
  color: #112481;
  font-size: 1.3rem;
  margin: 4pt auto 2pt auto;
}

h3 {
  font-size: 1.18rem;
  margin: 0.5em auto 0.05em auto;
}

h4 {
  font-size: 1.1rem;
  font-weight: normal;
  margin: 0 auto 0.35em auto;
}

article {
  line-height: 14pt;
  margin: 1.25em 0 1em 0;
  page-break-inside: avoid;
  width: 100%;
}

article.history {
  page-break-inside: auto;
}

article > header {
  border-bottom: 1px solid #112481;
  margin-bottom: 1rem;
}

section {
  orphans: 5;
  widows: 3 !important;
  width: 100%;
}

address {
  font-size: 12pt;
  font-style: normal;
  margin-left: 3em;
  margin-bottom: 0.25em;
}

p {
  margin: 0 0 1rem 0;
}

ul {
  margin-top: 0em;
  margin-bottom: 0.75em;
  orphans: 2;
  padding-left: 1em;
  widows: 2;
}

.dates {
  float: right;
  font-style: italic;
  font-weight: normal;
  white-space: nowrap;
}

dt {
  font-weight: bold;
}

/* Links */

a:link {
  text-decoration: none;
  color: #002;
}

a:visited {
  color: #0f0;
}

a:hover {
  color: #f0f;
  text-decoration: underline;
}

a:active {
  color: #f03;
}

@media print {
  @page {
    margin: 1in 1in 1in 1in;
    size: letter portrait;
  }

  @page :right {
    @bottom-right {
      content: "<%= title.name %>, " counter(page)
    }
  }

  @page :left {
    @bottom-left {
      content: "<%= title.name %>, " counter(page)
    }
  }
  @page :first {
    @bottom-right {
      content: none
    }
  }
}

@media screen {
  main {
    padding: 2em;
    max-width: 50em;
  }

  a:link {
    text-decoration: underline;
  }
}